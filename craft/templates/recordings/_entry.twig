{% extends "_layout" %}

{% block content %}
	<div class="recording-block">
	<article>
		{% for asset in entry.albumArt %}
			<img src="{{ asset.getUrl('threeHundredTwentyPxWide') }}" />
		{% endfor %}
		<h2>{{ entry.title }}</h2>
		<p>{{ entry.body }}</p>
		<p>{{ entry.downloadLink }}</p>
	</article>
	</div>
{% endblock %}
