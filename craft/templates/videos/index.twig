{% extends "_layout" %}
{% set title = "Luke Spurr Allen : Videos" %}

{% block content %}
	<h1>Videos</h1>
	<div class="basic-block">
		{% for entry in craft.entries.section('videos').find() %}
			<article class="flex nowrap space-between">
				<div class="third">
					<h1><a href="{{ entry.url }}">{{ entry.title }}</a></h1>
				</div>
				<div class="two-third">
					<div class="youtube-player" data-id="{{ entry.embedCode }}"></div>
				</div>
			</article>
		{% endfor %}
	<script src="../assets/js/youtube-player.js"></script>
	</div>
{% endblock %}