{% extends "_layout" %}
{% set title = "Luke Spurr Allen : Press" %}

{% block content %}
	<h1 class="page-title">Press</h1>
	<div class="basic-block">
		{% for entry in craft.entries.section('press').order('publicationDate desc') %}
			<article class="flex nowrap space-between stretch">
				<div class="third">
				{% for asset in entry.pressPhotos %}
	    			<img `	src="{{ asset.getUrl('threeHundredTwentyPxSquare') }}" />
				{% endfor %}
				</div>
				<div class="two-third">
					<div class="press-index">
						<h1><a href="{{ entry.url }}">{{ entry.title }}</a></h1>
						<h2>{{ entry.articleAuthor }}</h2>
						<p><i><a href="{{ entry.downloadLink }}" target="_blank">{{ entry.publication }}</i></a>, {{ entry.publicationDate | date("M d, Y") }}</p>
					</div>
				</div>
			</article>
			<div class="press-divider"></div>
		{% endfor %}
	</div>
{% endblock %}