{% for entry in craft.entries.section('shows') %}

---
date: {{ entry.date | date("F j, Y")}}
venue: {{ entry.venue.first() }}
lineup: {{ entry.lineUp }}
start_time: {{ entry.time | date("g:i a") }}
{% if entry.cover| length %}
cover: {{ entry.cover }}
{% endif %}

image: {% set image = entry.showArt.first() %}

---
{% if image %}
<img class="albumart" src="{{ image.getUrl('sixHundredFortyPxWide') }}">
{% endif %}

{{ entry.body | raw}}
{% endfor %}