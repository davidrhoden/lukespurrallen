{% extends "_layout" %}
{% set title = "Luke Spurr Allen : Shows" %}

{% block content %}
	<div class="basic-block">
		<h1>Shows</h1>
		{% for entry in craft.entries.section('shows').find() %}
		<div class="basic-block">
			<article>
				<p>{{ entry.date | date("M d, Y") }}</p>
				<h3><a href="{{ entry.url }}"> 
				{{ entry.venue.first() }}
				{{ entry.lineUp }}
				</a></h3>
			</article>
			</div>
		{% endfor %}
	</div>
{% endblock %}
